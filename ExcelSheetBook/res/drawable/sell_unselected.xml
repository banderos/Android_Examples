<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1dp" android:color="#6c6c6c" />
            <gradient android:type="linear" android:endColor="#E8E8E8" android:startColor="#646464" android:angle="90.0" />
            <corners android:radius="0.0dip" />
            <padding android:left="3dip" android:right="3dip" android:top="3dip" android:bottom="3dip"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1dp" android:color="#6f6f6f" />
            <gradient android:type="linear" android:endColor="#E8E8E8" android:startColor="#747474" android:angle="90.0" />
            <corners android:radius="0.0dip" />
            <padding android:left="3dip" android:right="3dip" android:top="3dip" android:bottom="3dip"/>            
        </shape>
            
    </item>
</selector>
